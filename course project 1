plot1.r
housepwr<-read.table("household_power_consumption.txt", header = TRUE, sep = ";", 
                     na.strings = c("?","NA"))   ## extract data from source
png("plot1.png")  ##create png file
with(housepwr, hist(subset(Global_active_power, Date %in% c("1/2/2007", "2/2/2007")), 
                    col = "red", main = "Global Active Power", ylim = c(0,1200),
                    xlab = "Global Active Power (kilowatts)"))   ## create data subset and histogram relating Global Active power and frequency
dev.off()  ##turn off device

plot2.r
housepwr<-read.table("household_power_consumption.txt", header = TRUE, sep = ";", 
                     na.strings = c("?","NA"))   ## extract data from source
png("plot2.png")   ## create png file
date_sub<-subset(housepwr, Date %in% c("1/2/2007", "2/2/2007"))  ## create data subset
date_sub$DATE_TIME<-with(date_sub, paste0(Date, Time))   ## create new column in data subset to combine Date and Time columns
re_date<-strptime(date_sub$DATE_TIME, format = "%d/%m/%Y%I:%M:%S")   ## convert new column data into correct date and time format
plot(re_date, date_sub$Global_active_power, type = "l", 
     xlab = "", ylab = "Global Active Power (kilowatts)")  ## create line graph relating the date and time to Global Active Power
dev.off() ## turn off device

plot3.r
housepwr<-read.table("household_power_consumption.txt", header = TRUE, sep = ";", 
                     na.strings = c("?","NA"))   ## extract data from source
png("plot3.png")   ## create png file
date_sub<-subset(housepwr, Date %in% c("1/2/2007", "2/2/2007"))  ## create data subset
date_sub$DATE_TIME<-with(date_sub, paste0(Date, Time))   ## create new column in data subset to combine Date and Time columns
re_date<-strptime(date_sub$DATE_TIME, format = "%d/%m/%Y%I:%M:%S")  ##to convert new column data into correct date and time format
plot(re_date, date_sub$Sub_metering_1, type = "l", 
     xlab = "", ylab = "Energy sub metering")  ## create initial line graph relating date and time to sub_metering_1
lines(re_date,date_sub$Sub_metering_2, type = "l", col = "red")  ##  created supplemental line graph relating date and time to sub_metering_2
lines(re_date,date_sub$Sub_metering_3, type = "l", col = "blue")  ##  created supplemental line graph relating date and time to sub_metering_3
legend("topright", legend = c("Sub_metering_1", "Sub_metering_2", "Sub_metering_3"), 
       col = c("black","red","blue"), lty = 1)  ## create legend denoting line color association with individual sub_metering categories
dev.off()  ## turn off device

plot4.r
housepwr<-read.table("household_power_consumption.txt", header = TRUE, sep = ";", 
                     na.strings = c("?","NA"))  ## extract data from source
png("plot4.png")  ## create png file
date_sub<-subset(housepwr, Date %in% c("1/2/2007", "2/2/2007"))  ## create data subset
date_sub$DATE_TIME<-with(date_sub, paste0(Date, Time))  ## create new column in data subset to combine Date and Time columns
re_date<-strptime(date_sub$DATE_TIME, format = "%d/%m/%Y%I:%M:%S")  ## to convert new column data into correct date and time format
par(mfrow=c(2,2))  ## to combine plots to create a matrix of plots 2 rows by 2 columns
plot(re_date, date_sub$Global_active_power, type = "l", 
     xlab = "", ylab = "Global Active Power (kilowatts)")  ## create data subset and histogram relating Global Active power and frequency
plot(re_date, date_sub$Voltage, type = "l", xlab = "datetime", ylab = "Voltage")  ## create a line graph that relates date/time to voltage
plot(re_date, date_sub$Sub_metering_1, type = "l", 
     xlab = "", ylab = "Energy sub metering")  ## create initial line graph relating date and time to sub_metering_1
lines(re_date,date_sub$Sub_metering_2, type = "l", col = "red")  ##  created supplemental line graph relating date and time to sub_metering_2
lines(re_date,date_sub$Sub_metering_3, type = "l", col = "blue")  ##  created supplemental line graph relating date and time to sub_metering_3
legend("topright", legend = c("Sub_metering_1", "Sub_metering_2", "Sub_metering_3"), 
       col = c("black","red","blue"), lty = 1, cex = 0.75)  ## create legend denoting line color association with individual sub_metering categories
plot(re_date, date_sub$Global_reactive_power, type = "l", xlab = "datetime", 
     ylab = "Global_reactive_power")  ## create line graph relating date/time to global reactive power
dev.off()  ## turn off device
